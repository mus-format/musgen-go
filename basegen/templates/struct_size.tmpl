{{- $l := FieldsLen . }}
{{- $r := Receiver .Name }}
{{- $p := .Prefix }}
{{- if eq $l 0 }}
	return
{{- else }}
	{{- $c := .Conf }}
	{{- range $i, $f := Fields . }}
		{{- $fnCall := GenerateFnCall $c (print $r "." $f.Name) "Size" $f.Type $p $f.Metadata }}
		{{- if or (not $f.Metadata) (not $f.Metadata.Ignore) }}
			{{- if eq $l 1 }}
				return {{ $fnCall }}
			{{- else }}
				{{- if eq $i 0 }}
					size = {{ $fnCall }}
				{{- end }}
				{{- if and (gt $i 0) (lt $i (minus $l 1)) }}
					size += {{ $fnCall }}
				{{- end }}
				{{- if eq $i (minus $l 1) }}
					return size + {{ $fnCall }}
				{{- end }}
			{{- end }}
		{{- end }}
	{{- end }}
{{- end }}	